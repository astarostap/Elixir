<%= stylesheet_link_tag "homepage" %>

<div class="container-fluid" style="horizontal-align: middle;position:relative;top:50px;">


<div id="outer-div"> 
<div id="owl-demo" class="owl-carousel owl-theme">

<% count = 0 %>
<% @all_questions.each_with_index do |q, index| %>
      <% break if count == 3 %>
      <div class="item">
        <%= link_to(image_tag(q.photo_link, :style => "position:relative;width:100%;height:500px;"), :controller => "questions", :action => "show", :id => q.id) %>
        <div class="carousel-caption">
          <h3 id="question-title"><%= q.title %></h3>
        </div>
      </div>
      <% count += 1 %>
<% end %> 
</div>
</div>
</div>

<%= javascript_include_tag "owl.carousel.min" %>
<%= javascript_include_tag "custom" %>


