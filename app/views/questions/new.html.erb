<%= stylesheet_link_tag "newquestion" %>

<div style = "position:relative;top:70px;">
<% if flash.notice %>
  <div><h3><%= flash.notice %></h3></div>
<%end%> 
<% @page_title = "UserAuth | Signup" %>

<div id="outer" style="width:100%">  

<div style="width: 50%; margin: 0 auto;position:relative" class="" id="loginModal">
  <div class="modal-body" style="max-height:500px">
    <div class="well">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#create" data-toggle="tab">New Question</a></li>
      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="create">
          <%= form_for(:question, :url => {:controller => 'questions', :action => 'create'}) do |f| %>
            <p> Title:</br> <%= f.text_field :title %> </p>
            <p> First Option:</br> <%= f.text_field :option1 %> </p>
            <p> Second Option:</br> <%= f.text_field :option2 %></p>
            <p> Text:</br> <%= f.text_area :text %></p>
            <p> Picture Link:</br> <%= f.text_field :photo_link %> </p>
            <button class="btn btn-primary">Publish</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
