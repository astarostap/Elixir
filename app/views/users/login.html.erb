<div style = "position:relative;top:70px;">
<% if flash.notice %>
  <div><h3><%= flash.notice %></h3></div>
<%end%> 

<div id="outer" style="width:100%">  

<div style="width: 30%; margin: 0 auto" class="" id="loginModal">
	<div class="modal-body">
		<div class="well">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#login" data-toggle="tab">Login</a></li>
			</ul>
		</br>
			<div id="myTabContent" class="tab-content">
				<div class="tab-pane active in" id="login">
						<fieldset>
							<div class="form-group">
							<%= form_tag({controller: "users", action: "post_login"}, method: "post", html: {role: "form"}) do%>
							<div class="control-group">
								<!-- Username -->
								<label class="control-label"  for="username">Username</label>
								<div class="controls">
									<input type="text" class="form-control" id="user_username" name="user[username]">
								</div>
							</div>
							</br>
							<div class="control-group">
								<!-- Password-->
								<label class="control-label" for="password">Password</label>
								<div class="controls">
									<input type="password" class="form-control" id="user_password" name="user[password]">
								</div>
							</div>
							</br>

							<div class="control-group">
            					<div class="checkbox">
              						<label>
                						<input type="checkbox" name="user[is_doctor]" value="doctor"> Are you a doctor? </input>
              						</label>
            					</div>
          					</div>
							</br>
							<div class="control-group">
								<!-- Button -->
								<div class="controls">
									<button type="submit" class="btn btn-primary">Login</button>
								</div>
							</div>
							<% end %>
						</fieldset>             
				</div>
			</div>
		</div>
	</div>
</div>
