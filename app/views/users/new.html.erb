<div style = "position:relative;top:70px;">
<% if flash.notice %>
  <div style="text-align: center; margin-left: auto; margin-right: auto;"><h3><%= flash.notice %></h3></div>
<%end%> 

<%= javascript_include_tag 'new_form'%>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.min.css" />
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css" />

<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>


<div id="outer" style="width:100%">  

<div style="width: 30%; margin: 0 auto" class="" id="loginModal">
	<div class="modal-body">
		<div class="well">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#create" data-toggle="tab">Create Account</a></li>
			</ul>
			<div id="myTabContent" class="tab-content">
				<div class="tab-pane active in" id="create">
					<%= form_tag({controller: "users", action: "create"}, method: "post", html: {role: "form"},:multipart => true) do%>
        </br>
					<div class="control-group">
               			<label class="control-label"  for="text">Username</label>
                		<div class="controls">
                  		<input type="text" class="form-control" id="user_username" name="user[username]">
                	</div>
          </div>
          </br>
          <div class="control-group">
            <label class="control-label"  for="text">Email</label>
              <div class="controls">
                  <input type="text" class="form-control" id="user_email" name="user[email]">
              </div>
          </div>
        </br>
          <div class="control-group">
            <label class="control-label"  for="text">Area of origin</label>
            </br>
            <div class="btn-group">
              <input type="radio" name="user[origin]" value="Eastern U.S."> U.S. East Coast<br>
              <input type="radio" name="user[origin]" value="Western U.S."> U.S. West Coast<br>
              <input type="radio" name="user[origin]" value="Midwest U.S."> U.S. Midwest<br>
              <input type="radio" name="user[origin]" value="Southern U.S."> U.S. South<br>
              <input type="radio" name="user[origin]" value="Other"> Other<br>
            </div>
          </div>
        </br>
          <div class="control-group">
            <label class="control-label"  for="text"> Gender</label>
            </br>
            <div class="btn-group">
              <input type="radio" name="user[sex]" value="Male"> Male 
              <input type="radio" name="user[sex]" value="Female"> Female <br>
            </div>
          </div>
          </br>
          <label class="control-label"  for="text"> Birth Date </label>
        </br>
        <div class="control-group">
            
            <div class="controls" id="datePicker">
                <input type="text" class="form-control" name="user[birth_date]" placeholder="mm/dd/yyyy"></input>
          </div>
        </div>
        </br>

          <div class="control-group">
            <label class="control-label"  for="text">Password</label>
            <div class="controls">
              <input type="password" class="form-control" id="user_password" name="user[password]"></input>
            </div>
          </div>
        </br>
          <div class="control-group">
            <label class="control-label"  for="text">Password Confirmation</label>
            <div class="controls">
              <input type="password" class="form-control" id="user_password_confirmation" name="user[password_confirmation]">
            </div>
          </div>
        </br>
            <label class="control-label">Picture</label>
            <%= file_field_tag "picture"%>
          </br>
          <div class="control-group">
            <div class="checkbox">
              <label>
                <input type="checkbox" name="user[is_doctor]" value="doctor" onclick="showDiv('doctorData')"> Are you a doctor? </input>
              </label>
            </div>
          </div>
          </br>
          <div id="doctorData" style="display:none;">
              <div class="control-group" >
                <label class="control-label"  for="text">Doctor School</label>
                  <div class="controls">
                      <input type="text" class="form-control" id="user_email" name="user[docSchool]">
                  </div>
              </div>
              <div class="control-group" >
                <label class="control-label"  for="text">Doctor Specialty</label>
                <select class="form-control" name = "user[docSpecialty]">
                  <option value="Radiology"  name="user[docSpecialty]">Radiology</option>
                  <option value="Pathology"  name="user[docSpecialty]">Pathology</option>
                  <option value="Cardiology"  name="user[docSpecialty]">Cardiology</option>
                  <option value="Pulmonary Medicine"  name="user[docSpecialty]">Pulmonary Medicine</option>
                  <option value="Obstetrics/ Gynecology"  name="user[docSpecialty]">Obstetrics/ Gynecology</option>
                  <option value="Other"  name="user[docSpecialty]">Other</option>
                </select>
              </div>
              <div class="control-group" >
                <label class="control-label"  for="text">Years in Practice</label>
                  <div class="controls">
                    <input type="text" class="form-control" id="user_email" name="user[years_in_practice]">
                  </div>
              </div>
          </div>
        </br>
					<div>
						<button class="btn btn-primary">Create Account</button>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
