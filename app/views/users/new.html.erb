<div style = "position:relative;top:50px;">
<% if flash.notice %>
  <div><h3><%= flash.notice %></h3></div>
<%end%> 

<link class="cssdeck" rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap-responsive.min.css" class="cssdeck">

<div id="outer" style="width:100%">  

<div style="width: 30%; margin: 0 auto" class="" id="loginModal">
	<div class="modal-body">
		<div class="well">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#create" data-toggle="tab">Create Account</a></li>
			</ul>
			<div id="myTabContent" class="tab-content">
				<div class="tab-pane active in" id="create">
					<%= form_tag({controller: "users", action: "create"}, method: "post", html: {role: "form"}) do%>
						<label>Username</label>
						<input type="text" value="" class="input-xlarge" id="user_username" name="user[username]">
						<label>Email</label>
						<input type="text" value="" class="input-xlarge" id="user_email" name="user[email]">
						<label>Password</label>
						<input type="text" value="" class="input-xlarge" id="user_password" name="user[password]">
						<label>Password Confirmation:</label>
						<input type="text" value="" class="input-xlarge" id="user_password_confirmation" name="user[password_confirmation]">
						</textarea>
						
						<div>
							<button class="btn btn-primary">Create Account</button>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>

